{
    "version": 2,
    "builds": [
        {
            "src": "api/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "api/lib/**",
                    "api/models/**",
                    "api/routes/**",
                    "api/.env"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "functions": {
        "api/server.js": {
            "memory": 128,
            "maxDuration": 10
        }
    }
}